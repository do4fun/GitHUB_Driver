<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.publiciteweb.mobile.github.Driver">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarGestion"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="#004466"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_below="@id/toolbarGestion">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/btnRepos"
            android:text="Repos"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:layout_marginRight="12dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/img_repos"
            android:background="#006699"
            android:paddingLeft="5dp"/>

        <android.support.v7.widget.AppCompatButton
            android:text="Couchette"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:id="@+id/btnCouchette"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/img_couchette"
            android:background="#006699"
            android:paddingLeft="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnConduite"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Conduite"
            android:layout_marginTop="24dp"
            android:layout_marginRight="12dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/img_contuit"
            android:background="#006699"
            android:paddingLeft="5dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnTravail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="D'autre travail"
            android:padding="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/img_travaux"
            android:background="#006699"
            android:paddingLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:text="Fiche journaliÃ¨re"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/btnFicheJournaliere"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_margin="24dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
